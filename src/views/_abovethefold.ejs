<section class="section atf">
  <div class="atf__text">
    <div class="page-title">
      <div class="reveal-text">
        <div class="reveal-text__content">
          <%= home.title.line1 %>
          <a title="*waves*" href="https://codepen.io/fabiosangregorio/" target="_blank"
            class="atf__hand-container hand-container move">
            <img src="/images/hand.png" class="atf__hand hand wave" alt="*waves*" title="*waves*">
          </a>
          <br>
          <h1><%= home.title.line2 %></h1>
        </div>
      </div>
    </div>
    <div class="page-subtitle" data-aos="fade-up" data-aos-duration="700" data-aos-delay="800">
      <p>
        <%- home.subtitle %>
      </p>
      <a title="<%= email_alt %>" href="mailto:fabio@sangregorio.dev"
        class="atf__link link--decorate">fabio@sangregorio.dev</a>
    </div>
  </div>
  <div class="atf__image">
    <div class="reveal">
      <div class="reveal__content">
        <img src="/images/profile.jpg" alt="Profile picture" title="">
      </div>
    </div>
  </div>
</section>